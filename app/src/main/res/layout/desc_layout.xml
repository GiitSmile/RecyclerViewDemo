<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/manage"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/manage_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="@mipmap/second"
                />
            <TextView
                android:id="@+id/manage_title"
                android:layout_width="match_parent"
                android:layout_below="@+id/manage_image"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:text="@string/DescTitle"
                />

            <TextView
                android:id="@+id/manage_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manage_title"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|start"
                android:layout_alignEnd="@+id/manage_title"
                android:textSize="17sp"
                android:padding="4dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/DescContent"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>